<h1>Listing addresses</h1>

<table>
  <tr>
  	<th>Name</th>
    <th>Street</th>
    <th>City</th>
    <th>State</th>
    <th>Zipcode</th>
    <th>Date deleted</th>
    <th>Is deleted</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
  	<td><%= address.name %></td>
    <td><%= address.street %></td>
    <td><%= address.city %></td>
    <td><%= address.state %></td>
    <td><%= address.zipCode %></td>
    <td><%= address.date_deleted %></td>
    <td><%= address.is_deleted %></td>
    <%if false%><td><%= address.family %></td><%end%>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

