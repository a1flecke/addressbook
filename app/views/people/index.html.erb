<h1>Listing people</h1>

<table>
  <tr>
    <th>Firstname</th>
    <th>Middlename</th>
    <th>Lastname</th>
    <th>Family</th>
    <th>Emails</th>
    <th>Phonenumbers</th>
    <th>Tags</th>
    <th>Birthday</th>
    <th>Date deleted</th>
    <th>Is deleted</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.firstName %></td>
    <td><%= person.middleName %></td>
    <td><%= person.lastName %></td>
    <td><%= person.family %></td>
    <td><%= person.emails %></td>
    <td><%= person.phoneNumbers %></td>
    <td><%= person.tags %></td>
    <td><%= person.birthday %></td>
    <td><%= person.date_deleted %></td>
    <td><%= person.is_deleted %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

