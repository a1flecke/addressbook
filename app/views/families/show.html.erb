<%- model_class = Family -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:comments_id) %>:</strong></dt>
  <dd><%= @family.comments_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:families_id) %>:</strong></dt>
  <dd><%= @family.families_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:addresses_id) %>:</strong></dt>
  <dd><%= @family.addresses_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tags_id) %>:</strong></dt>
  <dd><%= @family.tags_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:anniversary) %>:</strong></dt>
  <dd><%= @family.anniversary %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phoneNumbers_id) %>:</strong></dt>
  <dd><%= @family.phoneNumbers_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_deleted) %>:</strong></dt>
  <dd><%= @family.date_deleted %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_deleted) %>:</strong></dt>
  <dd><%= @family.is_deleted %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @family.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              families_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_family_path(@family), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              family_path(@family),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
