<%- model_class = Family -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:comments_id) %></th>
      <th><%= model_class.human_attribute_name(:addresses_id) %></th>
      <th><%= model_class.human_attribute_name(:tags_id) %></th>
      <th><%= model_class.human_attribute_name(:anniversary) %></th>
      <th><%= model_class.human_attribute_name(:phoneNumbers_id) %></th>
      <th><%= model_class.human_attribute_name(:date_deleted) %></th>
      <th><%= model_class.human_attribute_name(:is_deleted) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @families.each do |family|%> 
      <tr>
        <% simple_form_for family do |form|%>
        <td><%= render "comments/inline_comments", {family: family, form: form} %></td>
        <td><%= render "addresses/inline_addresses", {family: family, form: form} %></td>
        <td><%= family.tags_id %></td>
        <td ><%= form.input family.anniversary, :as => :date_picker %></td>
        <td><%= family.phoneNumbers_id %></td>
        <td><%= family.date_deleted %></td>
        <td><%= family.is_deleted %></td>
        <td><%= family.name %></td>
        <td><%=l family.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_family_path(family), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      family_path(family),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_family_path,
            :class => 'btn btn-primary' %>
